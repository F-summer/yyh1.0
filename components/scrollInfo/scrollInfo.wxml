<view class='container'>
  <view class='list-item' animation="{{animationData}}">
    <!-- <view class='list'> -->
    <swiper vertical="true" autoplay="true"  interval="2000" display-multiple-items='{{lenth}}'>
      <block wx:for="{{list}}" wx:key="index">
        <swiper-item>
          <view class='user-item'>
            <view class='user'>
              <image src="{{item.head_img}}" class='touxiang'></image>
              <view class='username'>{{item.nickname}}</view>
            </view>
            <view class='assistant'>{{item.assistant_time}}</view>
          </view>
        </swiper-item>
      </block>
  </swiper>

</view>
</view>